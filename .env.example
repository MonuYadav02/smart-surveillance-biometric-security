# Smart Surveillance System Configuration

# Application Settings
DEBUG=false
HOST=0.0.0.0
PORT=8000
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/surveillance_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=surveillance.log

# Storage Configuration
STORAGE_PATH=storage/
AI_MODEL_PATH=models/

# Email Configuration
EMAIL_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SENDER_EMAIL=surveillance@example.com
SENDER_NAME=Smart Surveillance System
ALERT_EMAIL_RECIPIENTS=admin@example.com,security@example.com

# SMS Configuration
SMS_ENABLED=false
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.sms-provider.com/send
SMS_SENDER_NUMBER=+1234567890
ALERT_SMS_RECIPIENTS=+1234567890,+0987654321

# Webhook Configuration
WEBHOOK_URL=https://your-webhook-url.com/alerts

# Camera Configuration (can be overridden per camera)
CAMERA_RESOLUTION_WIDTH=1920
CAMERA_RESOLUTION_HEIGHT=1080
CAMERA_FPS=30
NIGHT_VISION_THRESHOLD=0.3
MOTION_DETECTION_SENSITIVITY=0.5

# Biometric Configuration
FACE_RECOGNITION_TOLERANCE=0.6
FINGERPRINT_THRESHOLD=0.8
IRIS_RECOGNITION_ENABLED=true
BIOMETRIC_TIMEOUT=30

# AI Configuration
EMERGENCY_DETECTION_THRESHOLD=0.7
VIOLENCE_DETECTION_ENABLED=true
ANOMALY_DETECTION_ENABLED=true

# Alert Configuration
RECORDING_ENABLED=true
RECORDING_DURATION=300
ALERT_COOLDOWN=60

# Security Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALLOWED_HOSTS=*